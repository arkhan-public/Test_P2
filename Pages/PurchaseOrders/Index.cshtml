@page
@model InventorySystem.Pages.PurchaseOrders.IndexModel
@{
    ViewData["Title"] = "Purchase Orders";
}

<div class="row mb-3">
    <div class="col-md-6">
        <h2><i class="bi bi-cart-plus"></i> Purchase Orders</h2>
    </div>
    <div class="col-md-6 text-end">
        <a href="/PurchaseOrders/Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create Order
        </a>
    </div>
</div>

<div class="card mb-3">
    <div class="card-body">
        <form method="get">
            <div class="row g-2">
                <div class="col-md-10">
                    <select name="statusFilter" class="form-select">
                        <option value="">-- All Status --</option>
                        <option value="Pending" selected="@(Model.StatusFilter == "Pending")">Pending</option>
                        <option value="Completed" selected="@(Model.StatusFilter == "Completed")">Completed</option>
                        <option value="Cancelled" selected="@(Model.StatusFilter == "Cancelled")">Cancelled</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-funnel"></i> Filter
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Order Number</th>
                        <th>Supplier</th>
                        <th>Date</th>
                        <th>Total</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.PurchaseOrders.Count == 0)
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted py-4">
                                <i class="bi bi-inbox" style="font-size: 2rem;"></i>
                                <p class="mt-2">No purchase orders found.</p>
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var order in Model.PurchaseOrders)
                        {
                            <tr>
                                <td>
                                    <strong>@order.OrderNumber</strong>
                                </td>
                                <td>@order.Supplier?.Name</td>
                                <td>@order.OrderDate.ToString("MM/dd/yyyy")</td>
                                <td>
                                    <strong>$@order.TotalAmount.ToString("N2")</strong>
                                </td>
                                <td>
                                    @if (order.Status == InventorySystem.Models.PurchaseOrderStatus.Pending)
                                    {
                                        <span class="badge bg-warning text-dark">
                                            <i class="bi bi-hourglass-split"></i> Pending
                                        </span>
                                    }
                                    else if (order.Status == InventorySystem.Models.PurchaseOrderStatus.Completed)
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle"></i> Completed
                                        </span>
                                    }
                                    else if (order.Status == InventorySystem.Models.PurchaseOrderStatus.Cancelled)
                                    {
                                        <span class="badge bg-danger">
                                            <i class="bi bi-x-circle"></i> Cancelled
                                        </span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a href="/PurchaseOrders/Details?id=@order.Id" class="btn btn-info" title="View Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        @if (order.Status == InventorySystem.Models.PurchaseOrderStatus.Pending)
                                        {
                                            <a href="/PurchaseOrders/Details?id=@order.Id" class="btn btn-success" title="Complete Order">
                                                <i class="bi bi-check"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
