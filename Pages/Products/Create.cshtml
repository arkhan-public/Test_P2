@page
@model InventorySystem.Pages.Products.CreateModel
@{
    ViewData["Title"] = "Create Product";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-header">
                <h3><i class="bi bi-plus-circle"></i> Create New Product</h3>
            </div>
            <div class="card-body">
                <form method="post">
                    <div class="mb-3">
                        <label asp-for="Product.Name" class="form-label"></label>
                        <input asp-for="Product.Name" class="form-control" />
                        <span asp-validation-for="Product.Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Product.SKU" class="form-label"></label>
                        <input asp-for="Product.SKU" class="form-control" />
                        <span asp-validation-for="Product.SKU" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Product.Description" class="form-label"></label>
                        <textarea asp-for="Product.Description" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Product.Description" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Product.CategoryId" class="form-label"></label>
                            <select asp-for="Product.CategoryId" class="form-select" asp-items="Model.Categories">
                                <option value="">-- Select Category --</option>
                            </select>
                            <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Product.SupplierId" class="form-label"></label>
                            <select asp-for="Product.SupplierId" class="form-select" asp-items="Model.Suppliers">
                                <option value="">-- Select Supplier --</option>
                            </select>
                            <span asp-validation-for="Product.SupplierId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label asp-for="Product.UnitPrice" class="form-label"></label>
                            <input asp-for="Product.UnitPrice" class="form-control" type="number" step="0.01" />
                            <span asp-validation-for="Product.UnitPrice" class="text-danger"></span>
                        </div>

                        <div class="col-md-4 mb-3">
                            <label asp-for="Product.QuantityInStock" class="form-label"></label>
                            <input asp-for="Product.QuantityInStock" class="form-control" type="number" />
                            <span asp-validation-for="Product.QuantityInStock" class="text-danger"></span>
                        </div>

                        <div class="col-md-4 mb-3">
                            <label asp-for="Product.MinimumStockLevel" class="form-label"></label>
                            <input asp-for="Product.MinimumStockLevel" class="form-control" type="number" />
                            <span asp-validation-for="Product.MinimumStockLevel" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Product.ImageUrl" class="form-label"></label>
                        <input asp-for="Product.ImageUrl" class="form-control" />
                        <span asp-validation-for="Product.ImageUrl" class="text-danger"></span>
                        <small class="form-text text-muted">Enter an image URL from Unsplash or other source</small>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="/Products" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> Create Product
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
