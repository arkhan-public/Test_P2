@page
@model InventorySystem.Pages.Products.DeleteModel
@{
    ViewData["Title"] = "Delete Product";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h3><i class="bi bi-trash"></i> Delete Product</h3>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle"></i> Are you sure you want to delete this product?
                </div>

                <dl class="row">
                    <dt class="col-sm-4">Name:</dt>
                    <dd class="col-sm-8">@Model.Product.Name</dd>

                    <dt class="col-sm-4">SKU:</dt>
                    <dd class="col-sm-8">@Model.Product.SKU</dd>

                    <dt class="col-sm-4">Category:</dt>
                    <dd class="col-sm-8">@Model.Product.Category?.Name</dd>

                    <dt class="col-sm-4">Supplier:</dt>
                    <dd class="col-sm-8">@Model.Product.Supplier?.Name</dd>

                    <dt class="col-sm-4">Price:</dt>
                    <dd class="col-sm-8">$@Model.Product.UnitPrice.ToString("N2")</dd>

                    <dt class="col-sm-4">Stock:</dt>
                    <dd class="col-sm-8">@Model.Product.QuantityInStock</dd>
                </dl>

                <form method="post">
                    <input type="hidden" asp-for="Product.Id" />
                    <div class="d-flex justify-content-between">
                        <a href="/Products" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Delete
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
