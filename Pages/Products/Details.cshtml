@page
@model InventorySystem.Pages.Products.DetailsModel
@{
    ViewData["Title"] = "Product Details";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-header">
                <h3><i class="bi bi-eye"></i> Product Details</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4 text-center">
                        @if (!string.IsNullOrEmpty(Model.Product.ImageUrl))
                        {
                            <img src="@Model.Product.ImageUrl" alt="@Model.Product.Name" class="img-fluid rounded" style="max-width: 200px;">
                        }
                        else
                        {
                            <div class="bg-light p-5 rounded">
                                <i class="bi bi-image" style="font-size: 5rem;"></i>
                            </div>
                        }
                    </div>
                    <div class="col-md-8">
                        <dl class="row">
                            <dt class="col-sm-4">Name:</dt>
                            <dd class="col-sm-8">@Model.Product.Name</dd>

                            <dt class="col-sm-4">SKU:</dt>
                            <dd class="col-sm-8">@Model.Product.SKU</dd>

                            <dt class="col-sm-4">Description:</dt>
                            <dd class="col-sm-8">@Model.Product.Description</dd>

                            <dt class="col-sm-4">Category:</dt>
                            <dd class="col-sm-8">
                                <span class="badge bg-primary">@Model.Product.Category?.Name</span>
                            </dd>

                            <dt class="col-sm-4">Supplier:</dt>
                            <dd class="col-sm-8">
                                <span class="badge bg-info">@Model.Product.Supplier?.Name</span>
                            </dd>

                            <dt class="col-sm-4">Unit Price:</dt>
                            <dd class="col-sm-8">
                                <strong>$@Model.Product.UnitPrice.ToString("N2")</strong>
                            </dd>

                            <dt class="col-sm-4">Quantity in Stock:</dt>
                            <dd class="col-sm-8">
                                @if (Model.Product.QuantityInStock <= Model.Product.MinimumStockLevel)
                                {
                                    <span class="badge bg-danger">@Model.Product.QuantityInStock (Low Stock!)</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">@Model.Product.QuantityInStock</span>
                                }
                            </dd>

                            <dt class="col-sm-4">Min Stock Level:</dt>
                            <dd class="col-sm-8">@Model.Product.MinimumStockLevel</dd>

                            <dt class="col-sm-4">Created:</dt>
                            <dd class="col-sm-8">@Model.Product.CreatedAt.ToString("MM/dd/yyyy")</dd>

                            @if (Model.Product.UpdatedAt.HasValue)
                            {
                                <dt class="col-sm-4">Last Updated:</dt>
                                <dd class="col-sm-8">@Model.Product.UpdatedAt.Value.ToString("MM/dd/yyyy")</dd>
                            }
                        </dl>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-3">
                    <a href="/Products" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                    <div>
                        <a href="/Products/Edit?id=@Model.Product.Id" class="btn btn-warning">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <a href="/Stock/AddStock?productId=@Model.Product.Id" class="btn btn-success">
                            <i class="bi bi-plus-circle"></i> Add Stock
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
