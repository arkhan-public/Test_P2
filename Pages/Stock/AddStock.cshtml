@page
@model InventorySystem.Pages.Stock.AddStockModel
@{
    ViewData["Title"] = "Add Stock";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-header bg-success text-white">
                <h3 class="mb-0"><i class="bi bi-plus-lg"></i> Add Stock to Product</h3>
            </div>
            <div class="card-body">
                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="bi bi-exclamation-triangle"></i> @Model.ErrorMessage
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="bi bi-check-circle"></i> @Model.SuccessMessage
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <form method="post">
                    <div class="mb-3">
                        <label asp-for="ProductId" class="form-label">
                            <i class="bi bi-box-seam"></i> Select Product
                        </label>
                        <select asp-for="ProductId" class="form-select" id="productSelect">
                            <option value="">-- Select a Product --</option>
                            @foreach (var p in Model.Products)
                            {
                                <option value="@p.Id" data-current-stock="@p.QuantityInStock" data-minimum-level="@p.MinimumStockLevel">
                                    @p.Name @if(!string.IsNullOrEmpty(p.SKU)){ <text>(SKU: @p.SKU)</text> }
                                </option>
                            }
                        </select>
                        <span asp-validation-for="ProductId" class="text-danger small"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Current Stock</label>
                            <input type="text" class="form-control" id="currentStock" readonly>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Minimum Level</label>
                            <input type="text" class="form-control" id="minimumLevel" readonly>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Quantity" class="form-label">
                            <i class="bi bi-calculator"></i> Quantity to Add
                        </label>
                        <input asp-for="Quantity" type="number" class="form-control" min="1" placeholder="Enter quantity">
                        <span asp-validation-for="Quantity" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Notes" class="form-label">
                            <i class="bi bi-chat-left-text"></i> Notes (Optional)
                        </label>
                        <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Add any notes about this stock addition"></textarea>
                        <span asp-validation-for="Notes" class="text-danger small"></span>
                        <small class="form-text text-muted">e.g., Supplier name, purchase order reference, condition of items</small>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="/Stock/Overview" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to Overview
                        </a>
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-check-circle"></i> Add Stock
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        var productSelect = document.getElementById('productSelect');
        function updateStockFields() {
            var selectedOption = productSelect.options[productSelect.selectedIndex];
            var currentStock = selectedOption ? selectedOption.getAttribute('data-current-stock') || '0' : '0';
            var minimumLevel = selectedOption ? selectedOption.getAttribute('data-minimum-level') || '0' : '0';

            document.getElementById('currentStock').value = currentStock;
            document.getElementById('minimumLevel').value = minimumLevel;
        }

        productSelect.addEventListener('change', updateStockFields);

        // Populate fields on page load if a product is already selected (e.g., after validation errors or query param)
        document.addEventListener('DOMContentLoaded', function () {
            if (productSelect.value) {
                updateStockFields();
            }
        });
    </script>
}
