@page
@model InventorySystem.Pages.SalesOrders.DetailsModel
@{
    ViewData["Title"] = "Sales Order Details";
}

<div class="row">
    <div class="col-md-10 offset-md-1">
        @if (Model.SalesOrder == null)
        {
            <div class="alert alert-danger" role="alert">
                <i class="bi bi-exclamation-triangle"></i> Sales order not found.
            </div>
            <a href="/SalesOrders" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        }
        else
        {
            <div class="card details-card">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3><i class="bi bi-file-text"></i> Sales Order Details</h3>
                        <div>
                            @switch (Model.SalesOrder.Status)
                            {
                                case InventorySystem.Models.SalesOrderStatus.Pending:
                                    <span class="badge bg-warning text-dark" style="font-size: 0.9rem;">
                                        <i class="bi bi-hourglass-split"></i> Pending
                                    </span>
                                    break;
                                case InventorySystem.Models.SalesOrderStatus.Completed:
                                    <span class="badge bg-success" style="font-size: 0.9rem;">
                                        <i class="bi bi-check-circle"></i> Completed
                                    </span>
                                    break;
                                case InventorySystem.Models.SalesOrderStatus.Cancelled:
                                    <span class="badge bg-danger" style="font-size: 0.9rem;">
                                        <i class="bi bi-x-circle"></i> Cancelled
                                    </span>
                                    break;
                            }
                        </div>
                    </div>
                </div>

                <div class="card-body">
                    <!-- Header info (order + customer) in two columns -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-5">Order Number:</dt>
                                <dd class="col-sm-7"><strong>@Model.SalesOrder.OrderNumber</strong></dd>

                                <dt class="col-sm-5">Order Date:</dt>
                                <dd class="col-sm-7">@Model.SalesOrder.OrderDate.ToString("MM/dd/yyyy hh:mm tt")</dd>

                                @if (Model.SalesOrder.CompletedDate.HasValue)
                                {
                                    <dt class="col-sm-5">Completed:</dt>
                                    <dd class="col-sm-7">@Model.SalesOrder.CompletedDate.Value.ToString("MM/dd/yyyy hh:mm tt")</dd>
                                }
                            </dl>
                        </div>

                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-5">Customer:</dt>
                                <dd class="col-sm-7"><strong>@Model.SalesOrder.CustomerName</strong></dd>

                                <dt class="col-sm-5">Email:</dt>
                                <dd class="col-sm-7">
                                    @if (!string.IsNullOrWhiteSpace(Model.SalesOrder.CustomerEmail))
                                    {
                                        <a href="mailto:@Model.SalesOrder.CustomerEmail">@Model.SalesOrder.CustomerEmail</a>
                                    }
                                    else { <span class="text-muted">N/A</span> }
                                </dd>

                                <dt class="col-sm-5">Phone:</dt>
                                <dd class="col-sm-7">
                                    @if (!string.IsNullOrWhiteSpace(Model.SalesOrder.CustomerPhone))
                                    {
                                        <a href="tel:@Model.SalesOrder.CustomerPhone">@Model.SalesOrder.CustomerPhone</a>
                                    }
                                    else { <span class="text-muted">N/A</span> }
                                </dd>
                            </dl>
                        </div>
                    </div>

                    @if (!string.IsNullOrWhiteSpace(Model.SalesOrder.Notes))
                    {
                        <div class="alert alert-info mb-4">
                            <strong><i class="bi bi-info-circle"></i> Notes:</strong>
                            <p class="mb-0">@Model.SalesOrder.Notes</p>
                        </div>
                    }

                    <!-- Order Items -->
                    <h5 class="mt-4 mb-3"><i class="bi bi-box-seam"></i> Order Items</h5>
                    <div class="table-responsive">
                        @if (Model.SalesOrder.Items.Any())
                        {
                            <table class="table table-striped table-sm">
                                <colgroup>
                                    <col style="width:60%" />
                                    <col style="width:13%" />
                                    <col style="width:13%" />
                                    <col style="width:14%" />
                                </colgroup>
                                <thead class="table-light">
                                    <tr>
                                        <th>Product</th>
                                        <th class="text-center">Unit Price</th>
                                        <th class="text-center">Quantity</th>
                                        <th class="text-center">Total Price</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.SalesOrder.Items)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@item.Product?.Name</strong>
                                                @if (!string.IsNullOrEmpty(item.Product?.SKU))
                                                {
                                                    <br /><small class="text-muted">SKU: @item.Product.SKU</small>
                                                }
                                            </td>
                                            <td class="text-center">$@item.UnitPrice.ToString("N2")</td>
                                            <td class="text-center">@item.Quantity</td>
                                            <td class="text-center"><strong>$@item.TotalPrice.ToString("N2")</strong></td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot class="table-light">
                                    <tr>
                                        <th colspan="3" class="text-end">Total:</th>
                                        <th class="text-center">
                                            <strong class="text-success" style="font-size: 1.1rem;">
                                                $@Model.SalesOrder.Items.Sum(i => i.TotalPrice).ToString("N2")
                                            </strong>
                                        </th>
                                    </tr>
                                </tfoot>
                            </table>
                        }
                        else
                        {
                            <div class="alert alert-info" role="alert">
                                <i class="bi bi-info-circle"></i> No items in this order.
                            </div>
                        }
                    </div>

                    <!-- Action Buttons -->
                    <div class="d-flex justify-content-between mt-4">
                        <a href="/SalesOrders" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>

                        <div>
                            @if (Model.SalesOrder.Status == InventorySystem.Models.SalesOrderStatus.Pending)
                            {
                                <form method="post" asp-route-id="@Model.SalesOrder.Id" style="display:inline;">
                                    <input type="hidden" name="action" value="complete" />
                                    <button type="submit" class="btn btn-success" onclick="return confirm('Are you sure you want to confirm this order?');">
                                        <i class="bi bi-check-circle"></i> Confirm Order
                                    </button>
                                </form>
                                <form method="post" asp-route-id="@Model.SalesOrder.Id" style="display:inline;">
                                    <input type="hidden" name="action" value="cancel" />
                                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to cancel this order?');">
                                        <i class="bi bi-x-circle"></i> Cancel Order
                                    </button>
                                </form>
                            }
                            else if (Model.SalesOrder.Status == InventorySystem.Models.SalesOrderStatus.Completed)
                            {
                                <a class="btn btn-info btn-sm"
                                   href="/Stock/AddStock?reference=SO:@Model.SalesOrder.OrderNumber"
                                   title="Record Return for this Sales Order">
                                    <strong>(+)</strong> Return
                                </a>
                            }
                            else
                            {
                                <span class="text-muted"><em>This order cannot be modified as it is @Model.SalesOrder.Status.ToString().</em></span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
