@page
@model InventorySystem.Pages.SalesOrders.IndexModel
@{
    ViewData["Title"] = "Sales Orders";
}

<div class="row mb-3">
    <div class="col-md-6">
        <h2><i class="bi bi-file-earmark-text"></i> Sales Orders</h2>
    </div>
    <div class="col-md-6 text-end">
        <a href="/SalesOrders/Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New Order
        </a>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            @if (Model.SalesOrders.Any())
            {
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Order Number</th>
                            <th>Customer</th>
                            <th>Date</th>
                            <th>Total</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model.SalesOrders.OrderByDescending(o => o.OrderDate))
                        {
                            <tr>
                                <td>
                                    <strong>@order.OrderNumber</strong>
                                </td>
                                <td>@order.CustomerName</td>
                                <td>@order.OrderDate.ToString("MMM dd, yyyy")</td>
                                <td>$@order.TotalAmount.ToString("N2")</td>
                                <td>
                                    @switch (order.Status)
                                    {
                                        case InventorySystem.Models.SalesOrderStatus.Pending:
                                            <span class="badge bg-warning">Pending</span>
                                            break;
                                        case InventorySystem.Models.SalesOrderStatus.Completed:
                                            <span class="badge bg-success">Completed</span>
                                            break;
                                        case InventorySystem.Models.SalesOrderStatus.Cancelled:
                                            <span class="badge bg-danger">Cancelled</span>
                                            break;
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a href="/SalesOrders/Details?id=@order.Id" class="btn btn-info" title="Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        @if (order.Status == InventorySystem.Models.SalesOrderStatus.Pending)
                                        {
                                            <a href="/SalesOrders/Edit?id=@order.Id" class="btn btn-warning" title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-info" role="alert">
                    <i class="bi bi-info-circle"></i> No sales orders found. <a href="/SalesOrders/Create">Create your first order</a>
                </div>
            }
        </div>
    </div>
</div>
