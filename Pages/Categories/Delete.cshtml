@page
@model InventorySystem.Pages.Categories.DeleteModel
@{
    ViewData["Title"] = "Delete Category";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h3><i class="bi bi-trash"></i> Delete Category</h3>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle"></i> Are you sure you want to delete this category?
                    @if (Model.Category.Products.Any())
                    {
                        <br><strong>Warning: This category has @Model.Category.Products.Count product(s) associated with it!</strong>
                    }
                </div>

                <dl class="row">
                    <dt class="col-sm-4">Name:</dt>
                    <dd class="col-sm-8">@Model.Category.Name</dd>

                    <dt class="col-sm-4">Description:</dt>
                    <dd class="col-sm-8">@Model.Category.Description</dd>

                    <dt class="col-sm-4">Products:</dt>
                    <dd class="col-sm-8">@Model.Category.Products.Count</dd>
                </dl>

                <form method="post">
                    <input type="hidden" asp-for="Category.Id" />
                    <div class="d-flex justify-content-between">
                        <a href="/Categories" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Delete
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
