@page
@model InventorySystem.Pages.Categories.EditModel
@{
    ViewData["Title"] = "Edit Category";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card">
            <div class="card-header">
                <h3><i class="bi bi-pencil"></i> Edit Category</h3>
            </div>
            <div class="card-body">
                <form method="post">
                    <input type="hidden" asp-for="Category.Id" />
                    <input type="hidden" asp-for="Category.CreatedAt" />

                    <div class="mb-3">
                        <label asp-for="Category.Name" class="form-label"></label>
                        <input asp-for="Category.Name" class="form-control" />
                        <span asp-validation-for="Category.Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Category.Description" class="form-label"></label>
                        <textarea asp-for="Category.Description" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Category.Description" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="/Categories" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> Update Category
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
